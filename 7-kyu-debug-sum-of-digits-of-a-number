def get_sum_of_digits(num):
    return sum(map(int, str(num)))


#variation 2
def get_sum_of_digits(num):
    sum = 0
    str_num = str(num)
    for x in str_num:
        sum += int(x)
    return sum

# basically need to convert to a string so it is iterable
# or just use map sum, map methods, but still need to convert to a string to add numbers together

#variation 3
def get_sum_of_digits(n):
    return sum(int(d) for d in str(n))
